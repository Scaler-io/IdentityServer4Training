@model IdentityServer.Quickstart.Account.RegistrationViewModel

<div class="register__container">
    <div class="form-heading">
        <h2>Signup</h2>
        <p>Join the change</p>
    </div>
    <div class="form-content">
    <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
          <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" type="text" placeholder="Enter email" />
            <span asp-validation-for="Email" class="validation-error"></span>
          </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="confirm password" />
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sign up</button>
    </form>
    <p class="cta-link">Already have account?
       <a href="https://localhost:4200/callback">Sign in</a>
     </p>
    </div>
</div>